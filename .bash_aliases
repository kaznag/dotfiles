# ~/.bash_aliases

# some more ls aliases
alias ll='ls -hl'
alias la='ls -A'
alias l='ls -CF'
alias lla='ls -Ahl'

# directory operations
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# git aliases
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gbr='git branch -r'
alias gau='git add -u'
alias gst='git status'
alias gss='git status -s'
